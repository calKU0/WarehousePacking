@using KontrolaPakowania.Shared.Helpers
@inject PackingService _packingService

@if (Show)
{
    <div class="modal-backdrop fade show"></div>
    <div class="modal fade show d-block" tabindex="-1">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content shadow-lg rounded-3">
                <div class="modal-header">
                    <h5 class="modal-title">Zawartość JL</h5>
                    <button type="button" class="btn-close" @onclick="Close"></button>
                </div>

                <div class="modal-body">
                    @if (IsLoading)
                    {
                        <div class="text-center">
                            <div class="spinner-border text-primary"></div>
                        </div>
                    }
                    else if (JlItems?.Any() == true)
                    {
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Kod</th>
                                    <th>Nazwa</th>
                                    <th>Ilość</th>
                                    <th>Zdjęcie</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in JlItems)
                                {
                                    <tr>
                                        <td>@item.Code</td>
                                        <td>@item.Name</td>
                                        <td>@item.JlQuantity</td>
                                        <td><img src="@Utils.GetImageSrc(item.Image)" class="jl-item-img rounded" /></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-muted">Brak przedmiotów w JL.</p>
                    }
                </div>

                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="Close">Zamknij</button>
                </div>
            </div>
        </div>
    </div>
}

<Toast @ref="ToastError" Title="Error" Color="danger" />

@code {
    private bool Show { get; set; }
    private List<JlItemDto> JlItems = new();
    private bool IsLoading;
    private Toast ToastError = new();
    private string Barcode = string.Empty;

    public async Task ShowModal(string barcode)
    {
        Barcode = barcode;
        Show = true;
        await InvokeAsync(StateHasChanged);
        await LoadData();
    }

    private async Task LoadData()
    {
        try
        {
            IsLoading = true;
            JlItems = await _packingService.GetPackingJlItems(Barcode);
        }
        catch (Exception ex)
        {
            await ToastError.Show($"Błąd pobrania zawartości JL: {ex.Message}");
            await Task.Delay(7000).ContinueWith(_ => InvokeAsync(() => ToastError.Hide()));
        }
        finally
        {
            IsLoading = false;
            StateHasChanged();
        }
    }

    private async Task Close()
    {
        Show = false;
        await InvokeAsync(StateHasChanged);
    }
}

