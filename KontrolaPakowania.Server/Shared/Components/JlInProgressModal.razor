@inject PackingService _packingService

@if (Show)
{
    <div class="modal-backdrop fade show"></div>
    <div class="modal fade show d-block" tabindex="-1">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content shadow-lg rounded-3">
                <div class="modal-header">
                    <h5 class="modal-title">Kuwety podjęte do realizacji</h5>
                    <button type="button" class="btn-close" @onclick="Close"></button>
                </div>

                <div class="modal-body">
                    @if (IsLoading)
                    {
                        <div class="text-center">
                            <div class="spinner-border text-primary"></div>
                        </div>
                    }
                    else if (JlList?.Any() == true)
                    {
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Nazwa</th>
                                    <th>Użytkownik</th>
                                    <th>Nr. stanowiska</th>
                                    <th>Kurier</th>
                                    <th>Klient</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var jl in JlList)
                                {
                                    <tr>
                                        <td>@jl.Name</td>
                                        <td>@jl.User</td>
                                        <td>@jl.StationNumber</td>
                                        <td>@jl.Courier</td>
                                        <td>@jl.ClientName</td>
                                        <td>
                                            <button class="btn btn-sm btn-danger" @onclick="() => ConfirmRemove(jl)">
                                                Usuń
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-muted">Brak kuwet podjętych do realizacji.</p>
                    }
                </div>

                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="Close">Zamknij</button>
                </div>
            </div>
        </div>
    </div>

    <ConfirmDialog @ref="confirmDialog"
                   Title="Zamknij"
                   Message="Czy na pewno chcesz usunąć kuwete z realizacji?"
                   OnCancelClicked="HideConfirm"
                   OnConfirmClicked="ConfirmClose" />
}
<Toast @ref="ToastError" Title="Error" Color="danger" />

@code {
    [Parameter] public bool Show { get; set; }
    [Parameter] public EventCallback<bool> ShowChanged { get; set; }

    private List<JlInProgressDto> JlList;
    private ConfirmDialog confirmDialog = new();
    private JlInProgressDto? SelectedJl { get; set; }
    private Toast ToastError = new();
    private bool IsLoading { get; set; }

    public async Task ShowModal()
    {
        Show = true;
        StateHasChanged();
        await LoadData();
    }

    private async Task LoadData()
    {
        try
        {
            IsLoading = true;
            JlList = await _packingService.GetJlListInProgress();
        }
        catch (Exception ex)
        {
            await ToastError.Show($"Błąd przy próbie pobrania listy kuwet: {ex.Message}");
            await Task.Delay(7000).ContinueWith(_ => InvokeAsync(() => ToastError.Hide()));
        }
        finally
        {
            IsLoading = false;
            await InvokeAsync(StateHasChanged);
        }
    }

    private void ConfirmRemove(JlInProgressDto jl)
    {
        SelectedJl = jl;
        confirmDialog.Show = true;
    }

    private void Close()
    {
        Show = false;
        SelectedJl = null;
        StateHasChanged();
    }

    private void HideConfirm()
    {
        confirmDialog.Show = false;
    }

    private async void ConfirmClose()
    {
        confirmDialog.Show = false;
        if (SelectedJl != null)
        {
            try
            {
                await _packingService.RemoveJlRealization(SelectedJl.Name);
            }
            catch (Exception ex)
            {
                await ToastError.Show($"Błąd przy próbie usuwania JL z realizacji: {ex.Message}");
                await Task.Delay(7000).ContinueWith(_ => InvokeAsync(() => ToastError.Hide()));
            }
            finally
            {
                await LoadData();
                SelectedJl = null;
                await InvokeAsync(StateHasChanged);
            }
        }
    }
}
