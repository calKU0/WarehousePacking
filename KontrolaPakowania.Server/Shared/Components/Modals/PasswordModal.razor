@using Microsoft.AspNetCore.Components
@inject IJSRuntime JSRuntime

@if (IsVisible)
{
    <div class="modal-backdrop fade show" @onclick="Cancel"></div>
    <div class="modal d-block" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@Title</h5>
                    <button type="button" class="btn-close" @onclick="Cancel"></button>
                </div>
                <div class="modal-body">
                    @if (!string.IsNullOrWhiteSpace(BodyText))
                    {
                        <p>@BodyText</p>
                    }
                    <input type="password"
                           class="form-control"
                           @bind-value="Password"
                           @bind-value:event="oninput"
                           @ref="inputRef"
                           @onkeydown="HandleKeyDown"
                           placeholder="Hasło" />
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary" @onclick="Confirm">Potwierdź</button>
                    <button class="btn btn-secondary" @onclick="Cancel">Anuluj</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private bool IsVisible;
    private string Password = "";
    private ElementReference inputRef;
    private bool _shouldFocus;

    private ScanInput? ScanInput;
    private TaskCompletionSource<string?>? _tcs;

    private string Title = "Wpisz hasło";
    private string BodyText = "";

    public Task<string?> ShowAsync(
        string title = "Wprowadź hasło",
        string bodyText = "",
        ScanInput? scanInput = null)
    {
        Title = title;
        BodyText = bodyText;
        ScanInput = scanInput;

        Password = "";
        IsVisible = true;
        _shouldFocus = true;

        _tcs = new TaskCompletionSource<string?>();

        StateHasChanged();
        return _tcs.Task;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (_shouldFocus)
        {
            _shouldFocus = false;
            await JSRuntime.InvokeVoidAsync("blazorFocus.focusElement", inputRef);
        }
    }

    private async Task HandleKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await Confirm();
        }
    }

    private async Task Confirm()
    {
        _tcs?.TrySetResult(Password);
        await Hide();
    }

    private async Task Cancel()
    {
        _tcs?.TrySetResult(null);
        await Hide();

        if (ScanInput != null)
        {
            await ScanInput.FocusAsync();
        }
    }

    private Task Hide()
    {
        IsVisible = false;
        Password = "";
        StateHasChanged();
        return Task.CompletedTask;
    }
}
