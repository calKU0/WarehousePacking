@using KontrolaPakowania.Shared.Enums
@using KontrolaPakowania.Shared.Helpers
@inherits ComponentBase

@if (IsVisible)
{
    <div class="modal-backdrop fade show"></div>
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content rounded-3 shadow-lg">
                <div class="modal-header border-0 d-flex flex-column align-items-center">
                    <img src="@Utils.GetCourierSrc(CourierSrc)" alt="Courier" class="img-fluid mb-3" style="max-height:120px;" />
                </div>
                <div class="modal-body text-center">Wybierz jedną z opcji:</div>
                <div class="modal-footer d-flex justify-content-around border-0">
                    @if (CourierHelper.AllowedCouriersForLabel.Contains(Courier))
                    {
                        <button class="btn btn-primary btn-lg flex-fill mx-1 tall-btn" @onclick="OnCourierLabel">
                            Nadaj etykietę kurierską
                        </button>
                    }
                    <button class="btn btn-success btn-lg flex-fill mx-1 tall-btn" @onclick="OnInternalBarcode">
                        Nadaj kod kreskowy wewnętrzny
                    </button>
                    @if (PackingLevel == PackingLevel.Dół)
                    {
                        <button class="btn btn-warning btn-lg flex-fill mx-1 tall-btn" @onclick="OnBufor">
                            Zabuforuj
                        </button>
                    }
                    <button class="btn btn-secondary btn-lg flex-fill mx-1 tall-btn" @onclick="Hide">
                        Anuluj
                    </button>
                </div>
            </div>
        </div>
    </div>
}


@code {
    [Parameter] public Courier Courier { get; set; }
    [Parameter] public string CourierSrc { get; set; } = string.Empty;
    [Parameter] public PackingLevel PackingLevel { get; set; }
    [Parameter] public EventCallback OnCourierLabel { get; set; }
    [Parameter] public EventCallback OnInternalBarcode { get; set; }
    [Parameter] public EventCallback OnBufor { get; set; }

    protected bool IsVisible { get; set; }

    public void Show()
    {
        IsVisible = true;
        StateHasChanged();
    }

    public void Hide()
    {
        IsVisible = false;
        StateHasChanged();
    }
}
