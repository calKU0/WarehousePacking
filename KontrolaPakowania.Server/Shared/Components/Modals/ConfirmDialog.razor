@if (IsVisible)
{
    <div class="modal show d-block" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@Title</h5>
                </div>
                <div class="modal-body">
                    <p>@Message</p>
                </div>
                <div class="modal-footer d-flex gap-2 w-100">
                    <button class="btn btn-danger btn-lg tall-btn" style="flex: 7;" @onclick="OnConfirm">Potwierdź</button>
                    <button class="btn btn-secondary btn-lg tall-btn" style="flex: 3;" @onclick="OnCancel">Anuluj</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show"></div>
}

@code {
    private string Title { get; set; } = string.Empty;
    private string Message { get; set; } = string.Empty;
    protected bool IsVisible { get; set; }

    // Dynamic action for confirm
    private Func<Task> ConfirmAction { get; set; } = () => Task.CompletedTask;
    private Func<Task> CancelAction { get; set; } = () => Task.CompletedTask;

    public void Show(string title = "Potwierdzenie", string message = "Czy jesteś pewny?", Func<Task>? onConfirm = null, Func<Task>? onCancel = null)
    {
        Title = title;
        Message = message;
        ConfirmAction = onConfirm ?? (() => Task.CompletedTask);
        CancelAction = onCancel ?? (() => Task.CompletedTask);
        IsVisible = true;
        StateHasChanged();
    }

    public void Hide()
    {
        IsVisible = false;
        StateHasChanged();
    }

    private async Task OnConfirm()
    {
        await ConfirmAction.Invoke();
        Hide();
    }

    private async Task OnCancel()
    {
        await CancelAction.Invoke();
        Hide();
    }
}
