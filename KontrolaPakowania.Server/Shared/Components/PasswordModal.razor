@using Microsoft.AspNetCore.Components

<div class="modal-backdrop fade show" @onclick="Close"></div>
<div class="modal d-block" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@Title</h5>
                <button type="button" class="btn-close" @onclick="Close"></button>
            </div>
            <div class="modal-body">
                <input type="password" class="form-control" @bind="Password" placeholder="Hasło" />
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" @onclick="Confirm">Potwierdź</button>
                <button class="btn btn-secondary" @onclick="Close">Anuluj</button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public string Title { get; set; } = "Wpisz hasło";
    [Parameter] public EventCallback<string> OnConfirm { get; set; }
    [Parameter] public EventCallback OnClose { get; set; }

    private string Password { get; set; } = "";

    private async Task Confirm()
    {
        await OnConfirm.InvokeAsync(Password);
        Password = "";
    }

    private async Task Close()
    {
        await OnClose.InvokeAsync();
        Password = "";
    }
}
