@using WarehousePacking.Server.Services
@using WarehousePacking.Shared.Enums
@inject ClientPrinterService ClientPrinterService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@inherits ComponentBase

@if (IsVisible)
{
    <div class="modal-backdrop fade show"></div>
    <div class="modal fade show d-block shipment-modal">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content shipment-modal-content">
                <div class="modal-header border-0">
                    <h5 class="modal-title">Przesyłka wysłana</h5>
                </div>
                <div class="modal-body text-center">
                    @if (ShowScan)
                    {           
                        <input class="form-control mb-3 text-center"
                               placeholder="Zeskanuj kod kreskowy etykiety"
                               @bind="ScannedCode"
                               @bind:event="oninput"
                               @onkeydown="HandleKeyDown"
                               @ref="InputRef"
                               autofocus />
                    }
                    @if (!string.IsNullOrEmpty(ScanErrorMessage))
                    {
                        <p class="text-danger fw-bold mt-2">@ScanErrorMessage</p>
                    }
                    <p>Kod wewnętrzny: <strong>@InternalBarcode</strong></p>
                    <p>Numer przesyłki: <strong>@TrackingNumber</strong></p>
                    @if (HasInvoice)
                    {
                        <p class="text-success fw-bold">Wydrukowano fakturę. Dołącz do paczki.</p>
                    }
                </div>
                <div class="modal-footer container-fluid border-0">
                    <div class="row w-100">
                        <div class="col-8">
                            <button class="btn btn-primary shipment-btn w-100 tall-btn"
                                    @onclick="OnOkClicked"
                                    disabled="@(IsSubmitting || (string.IsNullOrWhiteSpace(ScannedCode) && ShowScan))">
                                OK
                            </button>
                        </div>
                        <div class="col-4">
                            <button class="btn btn-success shipment-btn w-100 tall-btn" @onclick="OnPrintClicked" enabled="@(!string.IsNullOrEmpty(LabelBase64))">
                                Wydrukuj ponownie
                            </button>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
}

@code {
    private bool IsVisible { get; set; }
    private string TrackingNumber { get; set; } = string.Empty;
    private string LabelBase64 { get; set; } = string.Empty;
    private string Printer { get; set; } = string.Empty;
    private PrintDataType LabelType { get; set; }
    private bool HasInvoice { get; set; }
    private string InternalBarcode { get; set; } = string.Empty;
    private string ScannedCode { get; set; } = string.Empty;
    private bool ShowScan { get; set; } = false;
    private ElementReference InputRef;
    private string? ScanErrorMessage;
    private bool IsSubmitting;
    private bool StayOpenAfterOk;
    public void KeepOpenAfterOk() => StayOpenAfterOk = true;
    [Parameter] public EventCallback<(string ScannedCode, string TrackingNumber)> OnOk { get; set; }

    public async void Show(string internalBarcode, string trackingNumber, string labelBase64, PrintDataType labelType, string printer, bool hasInvoice, bool showScan = true, string? scannedCode = null)
    {
        try
        {
            TrackingNumber = trackingNumber;
            LabelBase64 = labelBase64;
            LabelType = labelType;
            Printer = printer;
            HasInvoice = hasInvoice;
            InternalBarcode = internalBarcode;
            ShowScan = showScan;

            ScannedCode = scannedCode ?? string.Empty;
            IsVisible = true;
            await InvokeAsync(StateHasChanged);
            await InputRef.FocusAsync();
        }
        catch
        {
            
        }
    }

    private async Task OnOkClicked()
    {
        if (IsSubmitting)
            return;

        IsSubmitting = true;
        try
        {
            await ConfirmAsync();
        }
        finally
        {
            IsSubmitting = false;
        }
    }

    private async Task OnPrintClicked()
    {
        if (!string.IsNullOrEmpty(LabelBase64))
        {
            await ClientPrinterService.PrintAsync(Printer, LabelType.ToString(), LabelBase64);
            await JSRuntime.InvokeVoidAsync("blazorFocus.focusElement", InputRef);
        }
    }

    private async Task HandleKeyDown(KeyboardEventArgs e)
    {
        if (IsSubmitting)
            return;

        if (e.Key != "Enter")
             return;

        if (string.IsNullOrWhiteSpace(ScannedCode))
            return;

        if (ScannedCode.Length > 29)
        {
            ScanErrorMessage = "Za długi kod etykiety. Zeskanuj ponownie.";
            ScannedCode = string.Empty;

            await JSRuntime.InvokeVoidAsync("blazorFocus.focusElement", InputRef);
            StateHasChanged();
            return;
        }

        bool containsTracking =
            !string.IsNullOrEmpty(TrackingNumber) &&
            ScannedCode.Contains(TrackingNumber, StringComparison.OrdinalIgnoreCase);

        bool containsInternalBarcode =
            !string.IsNullOrEmpty(InternalBarcode) &&
            ScannedCode.Contains(InternalBarcode, StringComparison.OrdinalIgnoreCase);

        if (!containsTracking && !containsInternalBarcode)
        {
            ScanErrorMessage = "Nieprawidłowy kod. Zeskanuj numer przesyłki lub kod wewnętrzny.";
            ScannedCode = string.Empty;

            await JSRuntime.InvokeVoidAsync("blazorFocus.focusElement", InputRef);
            StateHasChanged();
            return;
        }

        ScanErrorMessage = null;

        IsSubmitting = true;
        try
        {
            await ConfirmAsync();
        }
        finally
        {
            IsSubmitting = false;
        }
    }

    private async Task ConfirmAsync()
    {
        if (OnOk.HasDelegate)
        {
            await OnOk.InvokeAsync((ScannedCode, TrackingNumber));
        }

        ScannedCode = string.Empty;
        if (StayOpenAfterOk)
        {
            StayOpenAfterOk = false;
            await InvokeAsync(StateHasChanged);
            return;
        }
        Hide();
    }

    public void Hide()
    {
        IsVisible = false;
        StateHasChanged();
    }
}
