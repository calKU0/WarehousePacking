@using Microsoft.AspNetCore.Components
@inject IJSRuntime JSRuntime

@if (IsVisible)
{
    <div class="modal-backdrop fade show" @onclick="Close"></div>
    <div class="modal d-block">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@Title</h5>
                    <button type="button" class="btn-close" @onclick="Close"></button>
                </div>
                <div class="modal-body">
                    <p>@Message</p>
                    <input class="form-control"
                           @bind="InputValue"
                           @bind:event="oninput"
                           @ref="inputRef"
                           @onkeydown="HandleKeyDown"
                           placeholder="@InputPlaceholder" />
                </div>
                <div class="modal-footer d-flex gap-2 w-100">
                    <button class="btn btn-primary btn-lg tall-btn" style="flex: 7;" @onclick="() => Confirm(InputValue)">Potwierdź</button>
                    <button class="btn btn-secondary btn-lg tall-btn" style="flex: 3;" @onclick="Close">Anuluj</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public string Title { get; set; } = "Tytuł";
    [Parameter] public string Message { get; set; } = "Wiadomość";
    [Parameter] public string InputPlaceholder { get; set; } = "Wprowadź tekst...";
    [Parameter] public EventCallback OnClose { get; set; }

    public bool IsVisible { get; set; } = false;
    public string InputValue { get; set; } = string.Empty;
    private ElementReference inputRef;
    private TaskCompletionSource<string> _tcs;
    private bool _shouldFocus;

    public Task<string> Show(string title = null, string message = null, string placeholder = null)
    {
        if (!string.IsNullOrEmpty(title)) Title = title;
        if (!string.IsNullOrEmpty(message)) Message = message;
        if (!string.IsNullOrEmpty(placeholder)) InputPlaceholder = placeholder;

        InputValue = string.Empty;
        IsVisible = true;
        _shouldFocus = true;
        StateHasChanged();

        _tcs = new TaskCompletionSource<string>();
        return _tcs.Task;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (_shouldFocus)
        {
            _shouldFocus = false;
            await JSRuntime.InvokeVoidAsync("blazorFocus.focusElement", inputRef);
        }
    }

    private void Cancel()
    {
        _tcs?.SetResult(null);
        Close();
    }

    private void Confirm(string value)
    {
        _tcs?.SetResult(InputValue);
        Close();
    }

    private void Close()
    {
        InputValue = string.Empty;
        IsVisible = false;
        StateHasChanged();
    }

    private void HandleKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            Confirm(InputValue);
        }
    }
}