@using WarehousePacking.Server.Services
@using WarehousePacking.Shared.Enums
@inject PackingService PackingService

@if (Show)
{
    <div class="modal-backdrop fade show"></div>
    <div class="modal fade show d-block" tabindex="-1">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content shadow-lg rounded-3">
                <div class="modal-header">
                    <h5 class="modal-title">Kuwety podjęte do realizacji</h5>
                    <button type="button" class="btn-close" @onclick="Close"></button>
                </div>

                <div class="modal-body">
                    @if (IsLoading)
                    {
                        <div class="text-center">
                            <div class="spinner-border text-primary"></div>
                        </div>
                    }
                    else if (JlList?.Any() == true)
                    {
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Nazwa</th>
                                    <th>Użytkownik</th>
                                    <th>Nr. stanowiska</th>
                                    <th>Kurier</th>
                                    <th>Klient</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var jl in JlList)
                                {
                                    <tr>
                                        <td>@jl.Name</td>
                                        <td>@jl.User</td>
                                        <td>@jl.StationNumber</td>
                                        <td>@jl.Courier</td>
                                        <td>@jl.ClientName</td>
                                        <td>
                                            <button class="btn btn-sm btn-danger" @onclick="() => ConfirmRemove(jl)">
                                                Usuń
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-muted">Brak kuwet podjętych do realizacji.</p>
                    }
                </div>

                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="Close">Zamknij</button>
                </div>
            </div>
        </div>
    </div>

    <ConfirmDialog @ref="ConfirmDialog" />
}
<Toast @ref="Toast"/>

@code {
    [Parameter] public bool Show { get; set; }
    [Parameter] public EventCallback<bool> ShowChanged { get; set; }

    private List<JlInProgressDto> JlList;
    private ConfirmDialog ConfirmDialog = new();
    private JlInProgressDto? SelectedJl { get; set; }
    private Toast Toast = new();
    private bool IsLoading { get; set; }

    public async Task ShowModal()
    {
        Show = true;
        StateHasChanged();
        await LoadData();
    }

    private async Task LoadData()
    {
        try
        {
            IsLoading = true;
            JlList = await PackingService.GetJlListInProgress();
        }
        catch (Exception ex)
        {
            Toast.Show("Błąd!", $"Błąd przy próbie pobrania listy kuwet: {ex.Message}");
        }
        finally
        {
            IsLoading = false;
            await InvokeAsync(StateHasChanged);
        }
    }

    private void ConfirmRemove(JlInProgressDto jl)
    {
        SelectedJl = jl;

        ConfirmDialog.Show(
            title: "Usuń kuwetę",
            message: "Czy na pewno chcesz usunąć kuwetę z realizacji?",
            onConfirm: async () =>
            {
                if (SelectedJl == null)
                    return;

                try
                {
                    await PackingService.RemoveJlRealization(SelectedJl.Name, true);
                    Toast.Show("Sukces!", "Kuweta została usunięta z realizacji.", ToastType.Success);
                }
                catch (Exception ex)
                {
                    Toast.Show("Błąd!", $"Błąd przy próbie usuwania JL z realizacji: {ex.Message}");
                }
                finally
                {
                    SelectedJl = null;
                    await LoadData();
                    await InvokeAsync(StateHasChanged);
                }
            },
            onCancel: async () =>
            {
                SelectedJl = null;
                await InvokeAsync(StateHasChanged);
            }
        );
    }

    private void Close()
    {
        Show = false;
        SelectedJl = null;
        StateHasChanged();
    }
}
