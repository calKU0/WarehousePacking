@using WarehousePacking.Shared.Enums

@if (Show)
{
    <div class="modal-backdrop fade show"></div>
    <div class="modal fade show d-block" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content shadow-lg rounded-3">
                <div class="modal-header">
                    <h5 class="modal-title">Wybierz kuriera</h5>
                    <button type="button" class="btn-close" @onclick="Close"></button>
                </div>
                <div class="modal-body">
                    <select class="form-select" @bind="SelectedCourier">
                        <option value="">-- wybierz --</option>
                        @foreach (var courier in Couriers)
                        {
                            <option value="@courier">@courier</option>
                        }
                    </select>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="Close">Anuluj</button>
                    <button class="btn btn-primary" @onclick="Confirm" disabled="@(!SelectedCourier.HasValue)">
                        Zatwierdź
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private bool Show { get; set; }
    private Courier? SelectedCourier { get; set; } = null;
    private List<Courier> Couriers { get; set; } = new() { Courier.DPD, Courier.GLS, Courier.Fedex };

    private TaskCompletionSource<Courier?> _tcs;

    public Task<Courier?> ShowModal(Courier? defaultCourier = null)
    {
        SelectedCourier = defaultCourier;
        Show = true;
        StateHasChanged();

        _tcs = new TaskCompletionSource<Courier?>();
        return _tcs.Task;
    }

    private void Confirm()
    {
        _tcs?.SetResult(SelectedCourier);
        Close();
    }

    private void Cancel()
    {
        _tcs?.SetResult(null);
        Close();
    }

    private void Close()
    {
        Show = false;
        SelectedCourier = null;
        StateHasChanged();
    }
}
